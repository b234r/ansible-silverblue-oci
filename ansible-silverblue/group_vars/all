# The 'build_cleanup' role #
############################

post_build_artifacts:
  - { src: /var/lib/flatpak/repo/config, dest: /etc/build_artifacts/flatpak/repo/config }
  - { src: /var/lib/flatpak/.changed, dest: /etc/build_artifacts/flatpak/ }
  - { src: /var/opt/1Password, dest: /etc/build_artifacts/onepassword }
  - { src: /var/roothome/.config, dest: /etc/build_artifacts/roothome/.config }
  - { src: /var/roothome/.local, dest: /etc/build_artifacts/roothome/.local }
  - { src: /var/roothome/.viminfo, dest: /etc/build_artifacts/roothome/.viminfo }

post_build_systemd_service:
  - { src: sync_files.py, dest: /usr/sbin/sync_files.py }
  - { src: sync_files.service, dest: /etc/systemd/system/sync_files.service }

